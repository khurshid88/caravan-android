<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:background="@drawable/background_dialog_trip">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter your Search"
        android:textColor="#167351"
        android:fontFamily="@font/circular_std_bold"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="40dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etAmountMin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/circular_std_bold"
            android:hint="@string/str_minimum_price"
            android:inputType="number"
            android:backgroundTint="@color/main_color"
            android:textColor="#99000000"
            android:textColorHint="#99000000"
            android:textSize="18sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/spinnerCurrencyMin"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_spinner" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/main_color" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp">

            <Spinner
                android:id="@+id/spinnerDayMin"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_spinner"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/main_color" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etAmountMax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/circular_std_bold"
            android:hint="@string/str_maximum_price"
            android:inputType="number"
            android:backgroundTint="@color/main_color"
            android:textColor="#99000000"
            android:textColorHint="#99000000"
            android:textSize="18sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/spinnerCurrencyMax"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_spinner" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/main_color" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp">

            <Spinner
                android:id="@+id/spinnerDayMax"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_spinner"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/main_color" />
        </LinearLayout>

    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Minimum People"
        android:layout_marginTop="25dp"
        android:textColorHint="#60000000"
        android:fontFamily="@font/circular_std_bold"
        android:textStyle="bold"
        android:drawableEnd="@drawable/ic_users"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Maximum People"
        android:layout_marginTop="25dp"
        android:textColorHint="#60000000"
        android:fontFamily="@font/circular_std_bold"
        android:textStyle="bold"
        android:drawableEnd="@drawable/ic_users"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Day"
        android:layout_marginTop="25dp"
        android:textColorHint="#60000000"
        android:fontFamily="@font/circular_std_bold"
        android:textStyle="bold"
        android:drawableEnd="@drawable/ic_day"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Minimum Rating"
        android:layout_marginTop="25dp"
        android:textColorHint="#60000000"
        android:fontFamily="@font/circular_std_bold"
        android:textStyle="bold"
        android:drawableEnd="@drawable/ic_star"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Maximum Rating"
        android:layout_marginTop="25dp"
        android:textColorHint="#60000000"
        android:fontFamily="@font/circular_std_bold"
        android:textStyle="bold"
        android:drawableEnd="@drawable/ic_star"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:background="@drawable/background_btn_intro"
        android:elevation="5dp"
        android:stateListAnimator="@null"
        app:backgroundTint="@null"
        android:text="Apply Filter"
        android:fontFamily="@font/circular_std_bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:translationZ="2dp" />
</LinearLayout>