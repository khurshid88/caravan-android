<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.fragment.SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp"
            android:layout_marginStart="15dp"
            android:hint="@string/str_search_edt"
            android:textColor="#CC000000"
            android:drawableEnd="@drawable/ic_search"
            android:fontFamily="@font/circular_std_bold"
            android:background="@drawable/background_edt_search"
            android:textColorHint="#99000000" />
        <ImageView
            android:id="@+id/ivFilter"
            android:paddingHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_burger"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_guide"
            android:fontFamily="@font/circular_std_bold"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:textColor="@color/black"
            android:background="@drawable/backgroung_text_search_selected"
            android:paddingVertical="10dp"
            android:paddingHorizontal="50dp"/>
        <TextView
            android:id="@+id/tvTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_trip"
            android:fontFamily="@font/circular_std_bold"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:background="@drawable/backgroung_text_search"
            android:paddingVertical="10dp"
            android:paddingHorizontal="50dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>